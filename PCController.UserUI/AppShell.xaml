<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PCController.UserUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PCController.UserUI"
    xmlns:pages="clr-namespace:PCController.UserUI.Pages"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <ShellContent
            Title="控制"
            ContentTemplate="{DataTemplate pages:ControlPage}"
            Icon="control.png"
            Route="ControlPage" />
        <ShellContent
            Title="键盘"
            ContentTemplate="{DataTemplate local:MainPage}"
            Icon="keyboard.png"
            Route="MainPage" />
        <ShellContent
            Title="窗口"
            ContentTemplate="{DataTemplate local:MainPage}"
            Icon="mutilwindow.png"
            Route="MainPage" />
        <ShellContent
            Title="指令"
            ContentTemplate="{DataTemplate local:MainPage}"
            Icon="cmd.png"
            Route="MainPage" />
        <ShellContent
            Title="设置"
            ContentTemplate="{DataTemplate local:MainPage}"
            Icon="setting.png"
            Route="MainPage" />
    </TabBar>
</Shell>
